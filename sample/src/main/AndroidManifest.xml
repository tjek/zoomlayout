<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopgun.android.zoomlayout.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SingleImageViewActivity"/>
        <activity android:name=".DoubleImageViewActivity"/>
        <activity android:name=".ViewPagerActivity"/>
        <activity android:name=".MultipleViewActivity"/>
        <activity android:name=".ChildViewInputActivity"/>
        <activity android:name=".TextViewActivity"/>
    </application>

</manifest>